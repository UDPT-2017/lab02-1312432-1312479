<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active">Messages</li>
</ol>
<div class="container">
    <h3>Viết tin nhắn</h3>
    <form class="" action="" method="post">
        <div class="form-group">
            <label for="">Người nhận :</label>
            <select class="form-control" name="friendid">
              {{#each list}}
                <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
        </div>
        <div class="form-group">
          <textarea name="chat" rows="8" cols="80" class="form-control" type="text" required="true"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-success">Submit</button>
        <button type="Reset" name="button" class="btn btn-default">Reset</button>
    </form>
</div>
